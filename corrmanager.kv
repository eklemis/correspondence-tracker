<MainFront>:
    orientation: 'lr-tb'
    rows: 2
    cols: 1
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            pos: self.pos
            size: self.size

    MenuActionBar:
        id:ActionBar

    ScreenManager:
        id: sm
        WelcomeScreen:
        BarcodeScreen:
        TDLIdentifierScreen
        FirstScreen:

<MenuActionBar@ActionBar>:
    ActionView:
        id: ActionView

        HiddenIcon_ActionPrevious:
        ActionButton:
            text: 'Barcode Generator'
            on_release: app.root.ids.sm.current = 'barcode'
        ActionButton:
            text: 'DL/RL Indentifier'
            on_release: app.root.ids.sm.current = 'tdlIdentifier'
        ActionGroup:
            id: App_ActionGroup
            mode: 'spinner'
            text: 'Other Screens'

            ActionButton:
                text: 'Something here'
                on_release: app.root.ids.sm.current = 'first'

        ActionGroup:
            id: App_ActionGroup
            mode: 'spinner'
            text: 'App'

            ActionButton:
                text: 'Settings'
                on_press: app.open_settings()
            ActionButton:
                text: 'Quit'
                on_press: app.get_running_app().stop()

<HiddenIcon_ActionPrevious@ActionPrevious>:
    title: ''   # app.title if app.title is not None else 'Action Previous'
    with_previous: False
    app_icon: ''
    app_icon_width: 0
    app_icon_height: 0
    size_hint_x: None
    width: len(self.title) * 10

<WelcomeScreen>:
    name: 'welcome'
    Label:
        text: 'Welcome Screen'
        font_size: sp(50)

<FirstScreen>:
    name: 'first'
    Label:
        text: 'First Screen'

<TDLIdentifierScreen>:
    name:'tdlIdentifier'

    GridLayout:
        padding: 20
        cols: 1
        rows: 3
        size_hint: (1, .8)

        GridLayout:
            rows: 1
            cols: 2

            size_hint_y: None
            height: 35

            Label:
                text: 'Barcode'
                size_hint_x: None
                width: 190
            TextInput:
                multiline: False

        GridLayout:
            rows: 1
            cols: 2

            GridLayout:
                rows: 3
                col: 2
                row_force_default: True
                row_default_height: 35

                Label:
                    text: 'Child ID'
                TextInput:
                    id: child_id
                    multiline: False
                    text: root.child_id
                    on_text_validate: root.generateFilledTdl()
                Label:
                    text: 'Child Name'
                TextInput:
                    id: child_name
                    multiline: False
                    disabled: True
                Label:
                    text:'Correspondence Number'
                TextInput:
                    multiline: False

            GridLayout:
                rows: 3
                col: 2
                row_force_default: True
                row_default_height: 35

                Label:
                    text: 'Sponsor ID'
                TextInput:
                    id: donor_id
                    multiline: False
                Label:
                    text: 'Sponsor Name'
                TextInput:
                    id: donor_name
                    multiline: False
                    disabled: True
                Label:
                    text:'ASISt Date Entry'
                TextInput:
                    multiline: False
                    disabled: True
        GridLayout:
            rows: 1
            cols: 2
            row_force_default: True
            row_default_height: 35
            Button:
                text:"Generate Filled Correspondence"
                on_release: root.displayPDF()
<BarcodeScreen@Screen>:
    name:'barcode'
    BarcodeGeneratorForm:
    BarcodesPage:
<BarcodeGeneratorForm>:
    cols: 2
    rows: 3

    padding: '5sp'
    row_force_default: True
    row_default_height: 35

    Label:
        text: 'Last generated code'
        pos_hint: (None, None)
        halign: 'left'
        size_hint_x: None
        width: 200
    TextInput:
        id: last_code
        multiline: False
        disabled: True
        size_hint_x: None
        width: 200
        text: root.lastCode
    Label:
        text: 'How much code to generate'
        size_hint_x: None
        width: 200
    TextInput:
        id: num_of_barcode
        multiline: False
        size_hint_x: None
        width: 200

    Button:
        text: 'Generate'
        size_hint_x: None
        width: 200

        pos_hint: {None, None}
        x: 200

        on_release: root.generateBarcode(num_of_barcode.text)
<BarcodesPage>:
    cols: 1
    rows: 2

    PageLayout:
    Button:
        size_hint_y: None
        height: 25
        text:'Print'