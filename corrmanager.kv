<MainFront>:
    orientation: 'lr-tb'
    rows: 2
    cols: 1
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            pos: self.pos
            size: self.size

    MenuActionBar:
        id:ActionBar

    ScreenManager:
        id: sm
        BarcodeScreen:
        WelcomeScreen:
        FirstScreen:
        SecondScreen:

<MenuActionBar@ActionBar>:
    ActionView:
        id: ActionView

        HiddenIcon_ActionPrevious:
        ActionButton:
            text: 'Barcode Generator'
        ActionButton:
            text: 'DL/RL Indentifier'
        ActionGroup:
            id: App_ActionGroup
            mode: 'spinner'
            text: 'Other Screens'

            ActionButton:
                text: 'Something here'
                on_release: app.root.ids.sm.current = 'second'
            ActionButton:
                text: 'Forum'
                on_release:  app.root.ids.sm.current = 'second'
            ActionButton:
                text: 'Probable Suspect'
                on_release:  app.root.ids.sm.current = 'second'

        ActionGroup:
            id: App_ActionGroup
            mode: 'spinner'
            text: 'App'

            ActionButton:
                text: 'Settings'
                on_press: app.open_settings()
            ActionButton:
                text: 'Quit'
                on_press: app.get_running_app().stop()

<HiddenIcon_ActionPrevious@ActionPrevious>:
    title: ''   # app.title if app.title is not None else 'Action Previous'
    with_previous: False
    app_icon: ''
    app_icon_width: 0
    app_icon_height: 0
    size_hint_x: None
    width: len(self.title) * 10

<WelcomeScreen>:
    name: 'welcome'
    Label:
        text: 'Welcome Screen'
        font_size: sp(50)

<FirstScreen>:
    name: 'first'
    Label:
        text: 'First Screen'

<SecondScreen>:
    name: 'second'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Something here'
            font_size: 50

        BoxLayout:
            Button:
                text: 'Back to Main Menu'
                font_size: 30
                on_release: app.root.ids.sm.current = 'first'
            Button:
                text: 'get random colour screen'
                font_size: 30
                on_release: app.root.ids.sm.current = 'first'
<RLIdentifierScreen@Screen>:
    name:'rlIdentifier'
    GridLayout:
        rows: 1
        cols: 1

        Label:
            text: Barcode
        TextInput:
            multiline: False

    GridLayout:
<BarcodeScreen@Screen>:
    name:'barcode'
    BarcodeGeneratorForm:
    BarcodesPage:
<BarcodeGeneratorForm>:
    cols: 2
    rows: 3

    padding: '5sp'
    row_force_default: True
    row_default_height: 35

    Label:
        text: 'Last generated code'
        pos_hint: (None, None)
        halign: 'left'
        size_hint_x: None
        width: 200
    TextInput:
        multiline: False
        disabled: True
        size_hint_x: None
        width: 200
    Label:
        text: 'How much code to generate'
        size_hint_x: None
        width: 200
    TextInput:
        multiline: False
        size_hint_x: None
        width: 200
    Button:
        text: 'Generate'
        size_hint_x: None
        width: 200

        pos_hint: {None, None}
        x: 200
<BarcodesPage>:
    cols: 1
    rows: 2

    PageLayout:
    Button:
        size_hint_y: None
        height: 10
        text:'Print'